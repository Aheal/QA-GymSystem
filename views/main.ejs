<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Gym System</title> 

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/stick.css">

</head>
<body>

    <div id="AddMember" class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="icon-title">
                    <h1><i class="fas fa-user-friends fa-2x"></i> Members</h1>
                </div>
            </div>
            <div class="col-md-12">
                <div>
                    <h3><i class="fas fa-user-plus fa-2x"></i> Add Member</h3>
                </div>
            </div>
        </div> 
        <div class="row">
            <div class="col-md-1 offset-md-1">
                <h5>ID</h5>
            </div>
            <div class="col-md-2 ">
                <h5>Name</h5>
            </div>
            <div class="col-md-1 ">
                <h5>Gender</h5>
            </div> 
            <div class="col-md-1 ">
                <h5>Age</h5>
            </div>
            <div class="col-md-2 ">
                <h5>Phone</h5>
            </div>
            <div class="col-md-1 ">
                <h5>Type</h5>
            </div>
            <div class="col-md-2 ">
                <h5>Susbcription Date</h5>
            </div>
        </div> 
        <div class="row">
            <form>
                <div class="form-row member-container">
                    <div class="form-group col-md-2 offset-md-2"> <input id="name" type="text" required></div>
                    <div class="form-group col-md-1 "> <input id="gender" type="text" required> </div>
                    <div class="form-group col-md-1 "> <input id="age" type="number" required> </div>
                    <div class="form-group col-md-2 "> <input id="phone" type="text" required> </div>
                    <div class="form-group col-md-1 ">
                        <select name="memberships" id="memberships">
                            <option value="Gold">Gold</option>
                            <option value="Silver">Silver</option>
                            <option value="Bronze">Bronze</option>
                        </select>
                    </div>
                    <div class="form-group col-md-2 "> <input id="date" type="date" required> </div>
                    <div class="form-group col-md-1 "> <button class="accept" type="submit"> Add </button></div>
                </div>
            </form>
        </div> 
        <div class="row">
                <div class="col-md-12">
                    <div>
                        <h3><i class="fas fa-users fa-2x"></i> Members</h3>
                    </div>
                </div>
            </div> 
            <div class="row">
                <div class="col-md-1 offset-md-1">
                    <h5>ID</h5>
                </div>
                <div class="col-md-2 ">
                    <h5>Name</h5>
                </div>
                <div class="col-md-1 ">
                    <h5>Gender</h5>
                </div> 
                <div class="col-md-1 ">
                    <h5>Age</h5>
                </div>
                <div class="col-md-2 ">
                    <h5>Phone</h5>
                </div>
                <div class="col-md-1 ">
                    <h5>Type</h5>
                </div>
                <div class="col-md-1 ">
                    <h5>Susbcription Date</h5>
                </div>
            </div> 
            <div class="row">
                <% for(var i=0; i < members.length; i++){ %> 
                    <div id="<%=members[i].name%>" value="<%=members[i].name%>" class="col-md-12 member-container">
                        <div class="row">
                            <div class="col-md-1 offset-md-1">
                                <p><%= members[i].id %></p>
                            </div>
                            <div class="col-md-2">
                                <p><%= members[i].name %></p>
                            </div>
                            <div class="col-md-1">
                                <p><%= members[i].gender %></p>
                            </div>
                            <div class="col-md-1">
                                <p><%= members[i].age %></p>
                            </div>
                            <div class="col-md-2">
                                <p><%= members[i].phone %></p>
                            </div>
                            <div class="col-md-1">
                                <p><%= members[i].type %></p>
                            </div>
                            <div class="col-md-1">
                                <p><%= members[i].date %></p>
                            </div>
                            <div class="col-md-1 "> <input class="delete" type="button" required> </div>
                            <div class="col-md-1 "> <input class="accept" type="button" required> </div>
                        </div>
                    </div> 
                <%}%>
            </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="/assets/controller.js"></script>
</body>
</html>